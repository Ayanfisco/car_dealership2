<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
        id="action_report_dealership_vehicle"
        model="dealership.vehicle"
        string="Vehicle Sheet"
        report_type="qweb-pdf"
        name="car_dealership.report_dealership_vehicle"
        file="car_dealership.report_dealership_vehicle"
        print_report_name="(object.name or 'Vehicle') + ' Sheet'"
    />

    <template id="report_dealership_vehicle">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <h2>Vehicle: <span t-esc="o.name"/></h2>
                    <p>VIN: <span t-esc="o.vin_number"/></p>
                    <p>Make: <span t-esc="o.make_id.name"/></p>
                    <p>Model: <span t-esc="o.model_id.name"/></p>
                    <p>Year: <span t-esc="o.year"/></p>
                    <p>Business Type: <span t-esc="o.business_type"/></p>
                    <p>Purchase Price: <span t-esc="o.purchase_price"/></p>
                    <p>Selling Price: <span t-esc="o.selling_price"/></p>
                    <p>Status: <span t-esc="o.state"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>
