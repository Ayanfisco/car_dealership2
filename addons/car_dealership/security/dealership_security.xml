<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_dealership_user" model="res.groups">
        <field name="name">Dealership User</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_dealership_manager" model="res.groups">
        <field name="name">Dealership Manager</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('group_dealership_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="dealership_vehicle_user_rule" model="ir.rule">
        <field name="name">Dealership Vehicle: User Access</field>
        <field name="model_id" ref="model_dealership_vehicle"/>
        <field name="domain_force">['|', ('create_uid', '=', user.id), ('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_dealership_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="dealership_vehicle_manager_rule" model="ir.rule">
        <field name="name">Dealership Vehicle: Manager Access</field>
        <field name="model_id" ref="model_dealership_vehicle"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_dealership_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>