<odoo>
    <!-- Car Feature Views -->
    <record id="view_car_feature_tree" model="ir.ui.view">
        <field name="name">car.feature.tree</field>
        <field name="model">car.dealership.feature</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_car_feature_form" model="ir.ui.view">
        <field name="name">car.feature.form</field>
        <field name="model">car.dealership.feature</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_car_feature" model="ir.actions.act_window">
        <field name="name">Car Features</field>
        <field name="res_model">car.dealership.feature</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>