<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_vehicle_sales_orders" model="ir.actions.act_window">
        <field name="name">Vehicle Sales Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('order_line.product_id.is_vehicle', '=', True)]</field>
    </record>
    <record id="action_vehicle_sales_report" model="ir.actions.act_window">
        <field name="name">Vehicle Sales Report</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="domain">[('product_id.is_vehicle', '=', True)]</field>
        <field name="context">{
            'search_default_month': 1,
            'search_default_salesperson': 1,
            'group_by': ['date:month', 'user_id'],
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No vehicle sales data available
            </p>
        </field>
    </record>

    <!-- Vehicle-specific Purchase Orders - Only for your module -->
    <record id="action_vehicle_purchase_orders" model="ir.actions.act_window">
        <field name="name">Vehicle Purchase Orders</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('order_line.product_id.is_vehicle', '=', True)]</field>
    </record>
    <record id="action_vehicle_purchase_rfq" model="ir.actions.act_window">
        <field name="name">Vehicle Purchase RFQ</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('order_line.product_id.is_vehicle', '=', True), ('state', 'in', ['draft', 'sent'])]
        </field>
    </record>

    <!-- Vehicle-specific Quotations - Only for your module -->
    <record id="action_vehicle_quotations" model="ir.actions.act_window">
        <field name="name">Vehicle Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('order_line.product_id.is_vehicle', '=', True), ('state', 'in', ['draft', 'sent'])]
        </field>
    </record>
    <record id="action_product_vehicle" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_vehicle', '=', True)]</field>
        <field name="context">{'default_is_vehicle': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dealership vehicle Product!
            </p>
            <p>
                Track vehicles in your dealership with detailed information,
                including VIN numbers, specifications, and profit tracking.
            </p>
        </field>
    </record>
    <!-- Actions -->
    <record id="action_dealership_vehicle" model="ir.actions.act_window">
        <field name="name">Dealership Vehicles</field>
        <field name="res_model">dealership.vehicle</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '!=', 'sold')] </field>
        <!-- <field name="context">{'search_default_available': 1}</field> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dealership vehicle!
            </p>
            <p>
                Track vehicles in your dealership with detailed information,
                including VIN numbers, specifications, and profit tracking.
            </p>
        </field>
    </record>

</odoo>