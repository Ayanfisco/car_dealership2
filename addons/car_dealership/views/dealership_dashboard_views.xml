<odoo>
    <template id="dealership_dashboard_template" inherit_id="web.dashboard_layout">
        <t t-call="web.dashboard_layout">
            <div class="o_dashboard_section">
                <div class="row">
                    <!-- Products Card -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card border-danger mb-3">
                            <div class="card-header bg-danger text-white">Marketplace Products</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col text-center">
                                        <span class="badge bg-warning">0 Pending</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-success">0 Approved</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-danger">0 Rejected</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Orders Card -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card border-warning mb-3">
                            <div class="card-header bg-warning text-dark">Marketplace Orders</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col text-center">
                                        <span class="badge bg-warning">0 Pending</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-success">0 Approved</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-primary">0 Shipped</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-danger">0 Cancelled</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-success">0 Done</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Stock Card -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card border-info mb-3">
                            <div class="card-header bg-info text-white">Marketplace Stock</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col text-center">
                                        <span class="badge bg-warning">0 Pending</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-success">0 Approved</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-danger">0 Rejected</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Payments Card -->
                    <div class="col-lg-3 col-md-6">
                        <div class="card border-primary mb-3">
                            <div class="card-header bg-primary text-white">Seller Payments</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col text-center">
                                        <span class="badge bg-primary">0 New Request</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-warning">0 In-Progress</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-success">0 Approved</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-info">0 Paid</span>
                                    </div>
                                    <div class="col text-center">
                                        <span class="badge bg-danger">0 Cancelled</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>