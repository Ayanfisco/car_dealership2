        <!-- Alternative Dashboard-style Kanban (more like accounting dashboard) -->
        <record id="view_dealership_vehicle_dashboard_kanban" model="ir.ui.view">
            <field name="name">dealership.vehicle.dashboard.kanban</field>
            <field name="model">dealership.vehicle</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard o_account_kanban" create="0" group_create="0" default_group_by="state">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="make_id"/>
                    <field name="year"/>
                    <field name="color"/>
                    <field name="engine_size"/>
                    <field name="mileage"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_card d-flex flex-column">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <field name="name"/>
                                        </div>
                                        <div class="text-muted">
                                            <field name="model_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                    </div>
                                </div>

                                <div class="o_kanban_card_content">
                                    <!-- Key metrics -->
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="o_kanban_primary_value">
                                                <field name="make_id"/>
                                            </div>
                                        </div>
                                        <div class="col-4 text-right">
                                            <field name="year"/>
                                        </div>
                                    </div>

                                    <!-- Status indicator -->
                                    <div class="mt-2">
                                        <field name="engine_size" widget="badge"/>
                                    </div>
                                </div>

                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-6">
                                                <h5 role="menuitem" aria-haspopup="true" class="o_kanban_card_manage_title">
                                                    <span>Actions</span>
                                                </h5>
                                                <div role="menuitem">
                                                    <a type="edit">Edit</a>
                                                </div>
                                                <div role="menuitem">
                                                    <a type="delete">Delete</a>
                                                </div>
                                                <div role="menuitem">
                                                    <a name="action_duplicate">Duplicate</a>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <h5 role="menuitem" aria-haspopup="true" class="o_kanban_card_manage_title">
                                                    <span>Reports</span>
                                                </h5>
                                                <div role="menuitem">
                                                    <a name="action_view_report">View Report</a>
                                                </div>
                                                <div role="menuitem">
                                                    <a name="action_print_report">Print Report</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    <record id="view_dealership_vehicle_form" model="ir.ui.view">
        <field name="name">dealership.vehicle.form</field>
        <field name="model">dealership.vehicle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
