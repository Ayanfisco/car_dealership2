<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dealership Vehicle Tree View -->
    <record id="view_dealership_vehicle_tree" model="ir.ui.view">
        <field name="name">dealership.vehicle.tree</field>
        <field name="model">dealership.vehicle</field>
        <field name="arch" type="xml">
            <list string="Dealership Vehicles" decoration-success="state=='available'"
                  decoration-info="state=='reserved'" decoration-muted="state=='sold'">
                <field name="name"/>
                <field name="vin_number"/>
                <field name="make_id"/>
                <field name="model_id"/>
                <field name="year"/>
                <field name="business_type"/>
                <field name="purchase_price" widget="monetary"/>
                <field name="selling_price" widget="monetary"/>
                <field name="profit_amount" widget="monetary"/>
                <field name="state" widget="badge"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Dealership Vehicle Form View -->
    <record id="view_dealership_vehicle_form" model="ir.ui.view">
        <field name="name">dealership.vehicle.form</field>
        <field name="model">dealership.vehicle</field>
        <field name="arch" type="xml">
            <form string="Dealership Vehicle">
                <header>
                    <button name="action_reserve" type="object" string="Reserve"
                            class="btn-primary" invisible="state != 'available'"/>
                    <button name="action_make_available" type="object" string="Make Available"
                            class="btn-secondary" invisible="state != 'reserved'"/>
                    <button name="action_mark_sold" type="object" string="Mark as Sold"
                            class="btn-success" invisible="state not in ['available', 'reserved']"/>
                    <button name="action_return_vehicle" type="object" string="Return to Consignor"
                            class="btn-warning" invisible="business_type != 'consigned' or state != 'available'"/>
                    <button name="create_fleet_vehicle" type="object" string="Create Fleet Record"
                            class="btn-secondary" invisible="fleet_vehicle_id"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,reserved,sold"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(fleet.fleet_vehicle_action)d" type="action"
                                class="oe_stat_button" icon="fa-car" invisible="not fleet_vehicle_id"
                                context="{'default_id': fleet_vehicle_id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Fleet Record</span>
                            </div>
                        </button>
                    </div>

                    <field name="image_1920" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Vehicle Name"/>
                        </h1>
                    </div>

                    <group>
                        <group name="vehicle_info">
                            <field name="vin_number"/>
                            <field name="product_id" readonly="1"/>
                            <field name="business_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="make_id" required="1"/>
                            <field name="model_id" domain="[('brand_id', '=', make_id)]"/>
                            <field name="year"/>
                            <field name="color"/>
                            <field name="mileage"/>
                        </group>

                        <group name="specs">
                            <field name="fuel_type"/>
                            <field name="transmission"/>
                            <field name="condition"/>
                            <field name="engine_size"/>
                            <field name="fleet_category_id" widget="selection"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Financial Information">
                            <group>
                                <group name="pricing">
                                    <field name="purchase_price" widget="monetary"/>
                                    <field name="selling_price" widget="monetary"/>
                                    <field name="profit_amount" widget="monetary" readonly="1"/>
                                    <field name="profit_percentage" readonly="1"/>
                                </group>

                                <group name="commission" invisible="business_type == 'owner'">
                                    <field name="vendor_id" required="business_type != 'owner'"/>
                                    <field name="commission_type" required="business_type != 'owner'"/>
                                    <field name="commission_value" required="business_type != 'owner'"/>
                                    <field name="commission_amount" widget="monetary" readonly="1"/>
                                    <field name="net_payable" widget="monetary" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Orders">
                            <group>
                                <group name="purchase_info">
                                    <field name="purchase_order_line_id" readonly="1"/>
                                </group>
<!--                                <group name="sale_info">-->
<!--                                    <field name="sale_order_line_id" readonly="1"/>-->
<!--                                </group>-->
                            </group>
                        </page>

                        <page string="Fleet Integration">
                            <group>
                                <field name="fleet_vehicle_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Dealership Vehicle Search View -->
    <record id="view_dealership_vehicle_search" model="ir.ui.view">
        <field name="name">dealership.vehicle.search</field>
        <field name="model">dealership.vehicle</field>
        <field name="arch" type="xml">
            <search string="Search Vehicles">
                <field name="name" string="Vehicle" filter_domain="['|', ('name', 'ilike', self), ('vin_number', 'ilike', self)]"/>
                <field name="make_id"/>
                <field name="model_id"/>
                <field name="vendor_id"/>
                <field name="year"/>
                <field name="business_type"/>
                <field name="state"/>

                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Reserved" name="reserved" domain="[('state', '=', 'reserved')]"/>
                <filter string="Sold" name="sold" domain="[('state', '=', 'sold')]"/>

                <separator/>
                <filter string="Owner Products" name="owner_products" domain="[('business_type', '=', 'owner')]"/>
                <filter string="Dealer Network" name="dealer_network" domain="[('business_type', '=', 'dealer_network')]"/>
                <filter string="Consigned" name="consigned" domain="[('business_type', '=', 'consigned')]"/>
                <separator/>
                <filter string="Profitable" name="profitable" domain="[('profit_amount', '&gt;', 0)]"/>
                <filter string="Loss Making" name="loss_making" domain="[('profit_amount', '&lt;', 0)]"/>

                <group expand="0" string="Group By">
                    <filter string="Make" name="group_make" domain="[]" context="{'group_by': 'make_id'}"/>
                    <filter string="Model" name="group_model" domain="[]" context="{'group_by': 'model_id'}"/>
                    <filter string="Business Type" name="group_business_type" domain="[]" context="{'group_by': 'business_type'}"/>
                    <filter string="Status" name="group_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Year" name="group_year" domain="[]" context="{'group_by': 'year'}"/>
                    <filter string="Vendor" name="group_vendor" domain="[]" context="{'group_by': 'vendor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Dealership Vehicle Kanban View -->
    <record id="view_dealership_vehicle_kanban" model="ir.ui.view">
        <field name="name">dealership.vehicle.kanban</field>
        <field name="model">dealership.vehicle</field>
        <field name="arch" type="xml">
            <kanban string="Vehicles" default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="vin_number"/>
                <field name="make_id"/>
                <field name="model_id"/>
                <field name="year"/>
                <field name="color"/>
                <field name="purchase_price"/>
                <field name="selling_price"/>
                <field name="profit_amount"/>
                <field name="state"/>
                <field name="business_type"/>
                <field name="image_128"/>
                <field name="currency_id"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('dealership.vehicle', 'image_128', record.id.raw_value)"
                                     alt="Vehicle" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="vin_number"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="text-muted">
                                        <t t-if="record.year.raw_value">
                                            <field name="year"/> -
                                        </t>
                                        <field name="color"/>
                                    </div>
                                    <div class="oe_kanban_bottom_left">
                                        <div class="o_kanban_inline_block">
                                            Purchase: <field name="purchase_price" widget="monetary"/>
                                        </div>
                                        <div class="o_kanban_inline_block" t-if="record.selling_price.raw_value">
                                            Selling: <field name="selling_price" widget="monetary"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge" t-att-class="'badge-' + (record.business_type.raw_value === 'owner' ? 'primary' :
                                                                                   record.business_type.raw_value === 'dealer_network' ? 'info' : 'warning')">
                                            <field name="business_type"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right" t-if="record.profit_amount.raw_value">
                                        <span t-att-class="'badge ' + (record.profit_amount.raw_value > 0 ? 'badge-success' : 'badge-danger')">
                                            Profit: <field name="profit_amount" widget="monetary"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_dealership_vehicle" model="ir.actions.act_window">
        <field name="name">Dealership Vehicles</field>
        <field name="res_model">dealership.vehicle</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dealership vehicle!
            </p>
            <p>
                Track vehicles in your dealership with detailed information,
                including VIN numbers, specifications, and profit tracking.
            </p>
        </field>
    </record>

    <record id="action_dealership_vehicle_available" model="ir.actions.act_window">
        <field name="name">Available Vehicles</field>
        <field name="res_model">dealership.vehicle</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'available')]</field>
        <field name="context">{'search_default_available': 1}</field>
    </record>

    <record id="action_dealership_vehicle_sold" model="ir.actions.act_window">
        <field name="name">Sold Vehicles</field>
        <field name="res_model">dealership.vehicle</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'sold')]</field>
        <field name="context">{'search_default_sold': 1}</field>
    </record>
</odoo>