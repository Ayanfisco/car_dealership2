<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit_dealership" model="ir.ui.view">
        <field name="name">product.template.form.inherit.dealership</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <header>
                <!--                <button name="action_reserve" type="object" string="Reserve"-->
                <!--                        class="btn-primary" invisible="state != 'available'"/>-->
                <!--                <button name="action_make_available" type="object" string="Make Available"-->
                <!--                        class="btn-secondary" invisible="state != 'reserved'"/>-->
                <!--                <button name="action_mark_sold" type="object" string="Mark as Sold"-->
                <!--                        class="btn-success" invisible="state not in ['available', 'reserved']"/>-->
                <!--                <button name="action_return_vehicle" type="object" string="Return to Consignor"-->
                <!--                        class="btn-warning" invisible="business_type != 'consigned' or state != 'available'"/>-->
                <!-- <button name="create_fleet_vehicle" type="object" string="Create Fleet Record"
                        class="btn-success" invisible="fleet_vehicle_id or not is_vehicle"/> -->
                <button name="create_fleet_vehicles_from_serials" type="object" string="Create Fleet Record From Serial"
                        class="btn-success" invisible="fleet_vehicle_id or not is_vehicle"/>
                <!-- <field name="state" widget="statusbar" statusbar_visible="available,reserved,sold"
                       invisible="not is_vehicle"/> -->
            </header>
            <xpath expr="//label[@for='purchase_ok']" position="after">
                <field name="is_vehicle"/>
                <label for="is_vehicle"/>
            </xpath>
            <xpath expr="//div[@name='options']" position="inside">
                <group name="vehicle_Information" invisible="not is_vehicle">
                    <group name="vehicle_info_1">
                        <field name="vin_number"/>
                        <field name="business_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="make_id" required="1"/>
                    </group>
                    <group name="vehicle_info_2">
                        <field name="model_id" domain="[('brand_id', '=', make_id)]"/>
                        <field name="year"/>
                        <field name="currency_id" invisible="1"/>
                        <!--                        <field name="color"/>-->
                        <field name="mileage" invisible="condition not in ['foreign_used', 'local_used']"/>
                    </group>
                </group>
            </xpath>
            <!--            <xpath expr="//div[@name='options']" position="after">-->
            <!--                -->
            <!--            </xpath>-->
            <xpath expr="//notebook/page[1]" position="before">
                <page string="Vehicle" invisible="not is_vehicle">
                    <group>
                        <group name="specs" invisible="not is_vehicle">
                            <field name="fuel_type"/>
                            <field name="transmission"/>
                            <field name="condition"/>
                            <field name="engine_size"/>
                            <field name="fleet_category_id" widget="selection"/>

                        </group>
                        <group name="commission" options="{'invisible': [('business_type', '=', 'owner')]}">
                            <field name="vendor_id" options="{'required': [('business_type', '!=', 'owner')]}"/>
                            <field name="commission_type" options="{'required': [('business_type', '!=', 'owner')]}"/>
                            <field name="commission_value" options="{'required': [('business_type', '!=', 'owner')]}"/>
                            <field name="commission_amount" widget="monetary" readonly="1"/>
                            <field name="net_payable" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <div class="oe_button_box" name="button_box">
                <button name="%(fleet.fleet_vehicle_action)d" type="action"
                        class="oe_stat_button" icon="fa-car" invisible="not fleet_vehicle_id"
                        context="{'form_view_ref': 'fleet.fleet_vehicle_view_form'}"
                        res_id="fleet_vehicle_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Fleet Record</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
     <!-- Dealership Vehicle Tree View -->
    <record id="view_product_template_list_custom" model="ir.ui.view">
        <field name="name">product.vehicle.list.custom</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <list string="Dealership Vehicles" decoration-success="state=='available'"
                  decoration-info="state=='reserved'" decoration-muted="state=='sold'">
                <field name="name"/>
                <field name="vin_number"/>
                <field name="make_id"/>
                <field name="model_id"/>
                <field name="year"/>
                <field name="business_type"/>
                <field name="purchase_price" widget="monetary"/>
                <field name="selling_price" widget="monetary"/>
                <field name="profit_amount" widget="monetary"/>
                <field name="state" widget="badge"/>
                <field name="currency_id" invisible="1"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>
    <record id="view_product_template_kanban_custom" model="ir.ui.view">
        <field name="name">product.template.kanban.custom</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <kanban string="Vehicles" default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="vin_number"/>
                <field name="make_id"/>
                <field name="model_id"/>
                <field name="year"/>
                <field name="color"/>
                <field name="purchase_price"/>
                <field name="selling_price"/>
                <field name="profit_amount"/>
                <!-- Optionally, remove or comment out the state field to avoid confusion, since workflow is now product-centric -->
                <!-- <field name="state"/> -->
                <field name="business_type"/>
                <field name="image_128"/>
                <field name="currency_id"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('dealership.vehicle', 'image_128', record.id.raw_value)"
                                     alt="Vehicle" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="vin_number"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="text-muted">
                                        <t t-if="record.year.raw_value">
                                            <field name="year"/>
                                            -
                                        </t>
                                        <field name="color"/>
                                    </div>
                                    <div class="oe_kanban_bottom_left">
                                        <div class="o_kanban_inline_block">
                                            Purchase:
                                            <field name="purchase_price" widget="monetary"/>
                                        </div>
                                        <div class="o_kanban_inline_block" t-if="record.selling_price.raw_value">
                                            Selling:
                                            <field name="selling_price" widget="monetary"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge" t-att-class="'badge-' + (record.business_type.raw_value === 'owner' ? 'primary' :
                                                                                   record.business_type.raw_value === 'dealer_network' ? 'info' : 'warning')">
                                            <field name="business_type"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right" t-if="record.profit_amount.raw_value">
                                        <span t-att-class="'badge ' + (record.profit_amount.raw_value > 0 ? 'badge-success' : 'badge-danger')">
                                            Profit:
                                            <field name="profit_amount" widget="monetary"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>