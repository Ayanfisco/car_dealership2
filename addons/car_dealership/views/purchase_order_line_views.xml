<record id="purchase_order_line_tree_inherit" model="ir.ui.view">
    <field name="name">purchase.order.line.tree.inherit</field>
    <field name="model">purchase.order.line</field>
    <field name="inherit_id" ref="purchase.view_purchase_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
            <button name="action_create_fleet_vehicles" 
                    type="object" 
                    icon="fa-car" 
                    title="Create Fleet Vehicles"
                    attrs="{'invisible': ['|', ('product_id.is_vehicle', '=', False), ('qty_received', '=', 0)]}"/>
            <button name="action_view_fleet_vehicles" 
                    type="object" 
                    icon="fa-eye" 
                    title="View Fleet Vehicles"
                    attrs="{'invisible': [('product_id.is_vehicle', '=', False)]}"/>
        </xpath>
    </field>
</record>