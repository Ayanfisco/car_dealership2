<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_search_inherit_dealership" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.dealership</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sale_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="vehicle_filter" string="Vehicle Orders" domain="[('is_vehicle', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
