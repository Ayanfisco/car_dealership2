<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit sale order form to add vehicle selection -->
    <record id="view_order_form_inherit_vehicle" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.vehicle</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="after">
                <field name="vehicle_id" 
                       attrs="{'readonly': [('product_id', '!=', False)]}"
                       options="{'no_create': True, 'no_create_edit': True}"
                       domain="[('state', '=', 'available')]"/>
                <field name="is_vehicle_product" invisible="1"/>
            </xpath>
            
            <!-- Also add to form view of order lines -->
            <xpath expr="//field[@name='order_line']//form//field[@name='product_id']" position="after">
                <field name="vehicle_id" 
                       attrs="{'readonly': [('product_id', '!=', False)]}"
                       options="{'no_create': True, 'no_create_edit': True}"
                       domain="[('state', '=', 'available')]"/>
                <field name="is_vehicle_product" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>