<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_test_drive_tree" model="ir.ui.view">
        <field name="name">car.dealership.test_drive.tree</field>
        <field name="model">car.dealership.test_drive</field>
        <field name="arch" type="xml">
            <tree>
                <field name="car_id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_test_drive_form" model="ir.ui.view">
        <field name="name">car.dealership.test_drive.form</field>
        <field name="model">car.dealership.test_drive</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="car_id"/>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="date"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_test_drive" model="ir.actions.act_window">
        <field name="name">Test Drive Requests</field>
        <field name="res_model">car.dealership.test_drive</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>