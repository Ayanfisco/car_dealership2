<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="car_list_template" name="Available Cars">
        <t t-call="website.layout">
            <div class="container my-4">
                <h1>Available Cars</h1>
                <div class="row">
                    <t t-foreach="cars" t-as="car">
                        <div class="col-md-4 mb-4">
                            <div class="card car-card h-100">
                                <t t-if="car.image_main">
                                    <img t-attf-src="/web/image/car.dealership.car/{{car.id}}/image_main" class="card-img-top" alt="Car"/>
                                </t>
                                <div class="card-body">
                                    <h5 class="card-title"><t t-esc="car.display_name"/></h5>
                                    <p class="card-text">Price: <t t-esc="car.selling_price"/> <t t-esc="car.currency_id.name"/></p>
                                    <p class="card-text">VIN: <t t-esc="car.vin"/></p>
                                    <button class="btn btn-primary test-drive-btn" t-att-data-car-id="car.id">Book Test Drive</button>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <!-- Test Drive Form Modal -->
                <div id="test-drive-modal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Book a Test Drive</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/cars/test_drive" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="car_id" id="car_id"/>
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Name</label>
                                        <input type="text" name="name" class="form-control" required="1"/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control" required="1"/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="date" class="form-label">Preferred Date</label>
                                        <input type="date" name="date" class="form-control" required="1"/>
                                    </div>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="test_drive_success" name="Test Drive Confirmation">
        <t t-call="website.layout">
            <div class="container my-4">
                <h1>Test Drive Request</h1>
                <div class="alert alert-success"><t t-esc="message"/></div>
                <a href="/cars" class="btn btn-primary">Back to Cars</a>
            </div>
        </t>
    </template>
</odoo>